# ===== App Config =====
PORT=8000
API_URL=http://your-droplet-ip:8000
FRONTEND_URL=http://your-frontend-domain.com

# ===== Database =====
POSTGRES_USER=myuser
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=drive_clone
DATABASE_URL=postgres://myuser:CHANGE_ME_STRONG_PASSWORD@db:5432/drive_clone

# ===== Auth =====
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
JWT_SECRET=CHANGE_ME_RANDOM_SECRET

# ===== DigitalOcean Spaces (S3) =====
DO_REGION=blr1
DO_ENDPOINT=https://blr1.digitaloceanspaces.com
DO_ACCESS_KEY=your-spaces-access-key
DO_SECRET_KEY=your-spaces-secret-key
DO_BUCKET_NAME=your-bucket-name

# ===== Redis =====
REDIS_URL=redis://redis:6379

# ===== RabbitMQ =====
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672
